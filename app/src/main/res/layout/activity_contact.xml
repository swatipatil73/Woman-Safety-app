<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/homgbg2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity">
    <ImageView
        android:id="@+id/contactImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/loginm"
        android:scaleType="centerInside"
        android:contentDescription="Contact Icon"
        android:layout_marginBottom="16dp"/>



    <!-- Emergency Contact 1 -->
    <EditText
        android:id="@+id/contact1"
        android:hint="Emergency Contact 1"
        android:inputType="phone"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@android:drawable/ic_menu_call"
        android:drawablePadding="10dp"/>

    <!-- Emergency Contact 2 -->
    <EditText
        android:id="@+id/contact2"
        android:hint="Emergency Contact 2"
        android:inputType="phone"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@android:drawable/ic_menu_call"
        android:drawablePadding="10dp"
        android:layout_marginTop="12dp"/>

    <!-- Emergency Contact 3 -->
    <EditText
        android:id="@+id/contact3"
        android:hint="Emergency Contact 3"
        android:inputType="phone"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@android:drawable/ic_menu_call"
        android:drawablePadding="10dp"
        android:layout_marginTop="12dp"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:text="Save Contacts"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="20dp"/>

</LinearLayout>
